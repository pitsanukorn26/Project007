@page
@model FinalProject.Pages.Compose_New_Email.ComposeMailModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose Email</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #900; /* Dark red background */
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size:20px;
        }

        .container {
            text-align: center;
            width: 100%; /* Use full width */
            max-width: 600px; /* Maximum width */
            padding: 0 20px; /* Padding on the sides */
        }

        h1 {
            color: white;
            margin-bottom: 20px;
            font-size: 30px;
            
        }

        .form-group {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

            .form-group label {
                width: 30%; /* Width of label */
                text-align: right;
                margin-right: 5px;
            }

            .form-group textarea {
                padding: 10px;
                /* ลบ padding-right ออก */
                border: 1px solid white;
                border-radius: 3px;
                background: #fff; /* White background */
                color: #000; /* Black text */
                margin-left: 20px;
                width: 100%; /* เพิ่มคุณสมบัติ width */
                box-sizing: border-box; /* คำนวณ padding และ border เป็นส่วนหนึ่งของความกว้าง */
            }

        #MESSAGE {
            rows: 15; /* Increased height for Message textarea */
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 10px; /* Spacing between buttons */
            margin-top: 20px;
        }

        button {
            padding: 10px 30px;
            border: none;
            border-radius: 40px;
            cursor: pointer;
            font-weight: bold;
            background: white;
            color: #900; /* Dark red text */
            padding-left: 70px;
            padding-right: 70px;
        }

        .error-message, .success-message {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style=" margin-left:10px">SENDING EMAIL</h1>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="success-message">@Model.SuccessMessage</div>
        }
        <form method="post">
            <div class="form-group">
                <label for="TO" style="margin-bottom:10px;">To:</label>
                <textarea id="TO" name="TO" rows="1" ></textarea>
            </div>
            <div class="form-group">
                <label for="SUBJECT" width="100px" style="margin-bottom:10px;">Subject:</label>
                <textarea id="SUBJECT" name="SUBJECT" rows="1"></textarea>
            </div>
            <div class="form-group">
                <label for="MESSAGE" style="margin-bottom:240px;">Message:</label>
                <textarea id="MESSAGE" name="MESSAGE" rows="15"></textarea> <!-- Increased row count -->
            </div>
            <div class="button-group">
                <button type="submit" class="send" onclick="location.href='/Success'" style="margin-left:135px;">SEND</button>
                <button type="button" class="home" onclick="location.href='/Index'" style="margin-left:30px;">HOME</button>
            </div>
        </form>
    </div>
</body>
</html>
